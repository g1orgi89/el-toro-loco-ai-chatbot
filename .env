# Базовая конфигурация для тестирования
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# MongoDB - используйте MongoDB Atlas или локальный
MONGODB_URI=mongodb://localhost:27017/shrooms-support

# Qdrant - используйте облачный или локальный
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=shrooms_knowledge

# Anthropic Claude API ключ (требуется для работы)
ANTHROPIC_API_KEY=your_claude_api_key_here

# OpenAI API ключ (для embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Простая авторизация администратора
ADMIN_USERNAME=admin
ADMIN_PASSWORD=shrooms123

# JWT секрет
JWT_SECRET=your_jwt_secret_key_here

# CORS настройки
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
