# Environment Configuration for Shrooms Support Bot

# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=/api

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/shrooms-support

# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here-replace-with-real-key
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# Vector Database Configuration (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_COLLECTION_NAME=shrooms_knowledge

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Security Configuration
JWT_SECRET=shrooms-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ShroomsMushroom123!
ADMIN_TOKEN=shrooms-admin-token-2025
API_KEYS=shrooms-api-key-1,shrooms-api-key-2

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs
ENABLE_FILE_LOGGING=true
ENABLE_HTTP_LOGGING=true

# Feature Flags
ENABLE_RAG=true
ENABLE_ANALYTICS=false
ENABLE_CACHING=false
ENABLE_METRICS=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,ru

# Health Check Configuration
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=60000

# Shrooms-specific Configuration
SHROOMS_FARMING_YIELD=12.5
WIDGET_BASE_URL=http://localhost:3000
WIDGET_THEME=dark