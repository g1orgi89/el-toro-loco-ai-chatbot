# Shrooms Support Bot Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=/api

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/shrooms-support

# Anthropic/Claude Configuration (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# Vector Database Configuration
VECTOR_DB_URL=http://localhost:6333
VECTOR_COLLECTION_NAME=shrooms_knowledge

# Embedding Configuration (REQUIRED for vector search)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-ada-002

# Security Configuration
JWT_SECRET=shrooms-secret-key
JWT_EXPIRES_IN=7d
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
API_KEYS=key1,key2,key3

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs
ENABLE_FILE_LOGGING=true

# CORS Configuration
CORS_ORIGIN=*

# Session Configuration
SESSION_SECRET=shrooms-session-secret
SESSION_COOKIE_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# External Services
WEBHOOK_SECRET=shrooms-webhook-secret

# Feature Flags
ENABLE_RAG=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=false

# Cache Configuration (if enabled)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# Development Configuration
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_MODE=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000

# Shrooms-specific Configuration
SHROOMS_FARMING_YIELD=12.5
SHROOMS_CONTRACT_ADDRESS=your_shrooms_contract_address_here
STACKS_RPC_URL=https://stacks-node-api.mainnet.stacks.co

# Widget Configuration
WIDGET_BASE_URL=http://localhost:3000
WIDGET_THEME=dark

# Notification Configuration
EMAIL_FROM=noreply@shrooms.io
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,ru

# API Versioning
API_VERSION=v1

# Timeouts and Retries
API_TIMEOUT=5000
MAX_RETRIES=3
RETRY_DELAY=1000
