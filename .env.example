# Shrooms Support Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# ============================================================================
# Database Configuration
# ============================================================================
MONGODB_URI=mongodb://localhost:27017/shrooms-support

# ============================================================================
# Anthropic/Claude Configuration
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# ============================================================================
# Vector Database Configuration (Qdrant)
# ============================================================================
VECTOR_DB_URL=http://localhost:6333
VECTOR_COLLECTION_NAME=shrooms_knowledge

# ============================================================================
# Embedding Configuration (OpenAI for embeddings)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-ada-002

# ============================================================================
# Security Configuration
# ============================================================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
ADMIN_PASSWORD=your_admin_password_here
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_MAX_AGE=86400000

# ============================================================================
# Telegram Bot Configuration (Optional)
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
LOG_DIR=logs
ENABLE_FILE_LOGGING=true

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGIN=*

# ============================================================================
# File Upload Configuration
# ============================================================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_RAG=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=false

# ============================================================================
# Cache Configuration (Redis - Optional)
# ============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============================================================================
# Metrics and Monitoring
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ============================================================================
# Performance Configuration
# ============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000

# ============================================================================
# Development Configuration
# ============================================================================
ENABLE_HOT_RELOAD=false
ENABLE_DEBUG_MODE=false

# ============================================================================
# Health Check Configuration
# ============================================================================
HEALTH_CHECK_INTERVAL=60000

# ============================================================================
# Shrooms-Specific Configuration
# ============================================================================
SHROOMS_FARMING_YIELD=12.5
SHROOMS_CONTRACT_ADDRESS=ST2CY5V39NHDPWSXMW9QDT3HC3GD6Q6XX4CFRK9AG.shrooms-token
STACKS_RPC_URL=https://stacks-node-api.mainnet.stacks.co

# ============================================================================
# Widget Configuration
# ============================================================================
WIDGET_BASE_URL=http://localhost:3000
WIDGET_THEME=dark

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
EMAIL_FROM=noreply@shrooms.io
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here

# ============================================================================
# Language Support
# ============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,ru

# ============================================================================
# API Configuration
# ============================================================================
API_VERSION=v1
API_TIMEOUT=5000
MAX_RETRIES=3
RETRY_DELAY=1000

# ============================================================================
# Webhook Configuration
# ============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
