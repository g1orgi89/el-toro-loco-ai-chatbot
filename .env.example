# Shrooms Support Bot Environment Variables
# Copy this file to .env and fill in your actual values

# ===== Server Configuration =====
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ===== Database Configuration =====
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/shrooms-support

# ===== Vector Database Configuration =====
# Qdrant vector database URL
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=shrooms_knowledge

# ===== AI Service Configuration =====
# Anthropic Claude API key
ANTHROPIC_API_KEY=your_claude_api_key_here

# Optional: OpenAI API key for embeddings
OPENAI_API_KEY=your_openai_api_key_here

# ===== Telegram Bot Configuration =====
# Telegram Bot Token (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ===== Security Configuration =====
# JWT secret for admin authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Admin credentials for initial setup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# ===== Rate Limiting =====
# Requests per window
RATE_LIMIT_MAX=100
# Window size in minutes
RATE_LIMIT_WINDOW=15

# ===== Knowledge Base Configuration =====
# Text chunk size for document processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===== CORS Configuration =====
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===== Webhook Configuration =====
# Webhook secret for external integrations
WEBHOOK_SECRET=your_webhook_secret_here

# ===== Error Reporting =====
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# ===== File Upload Configuration =====
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE=10
# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=pdf,txt,md,docx

# ===== Cache Configuration =====
# Cache TTL in seconds
CACHE_TTL=3600
# Enable/disable caching
ENABLE_CACHE=true

# ===== Development Configuration =====
# Enable API docs (Swagger)
ENABLE_DOCS=true
# Enable debug mode
DEBUG=shrooms:*

# ===== Monitoring Configuration =====
# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30
# Metrics collection interval in seconds
METRICS_INTERVAL=60