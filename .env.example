# Core Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/shrooms-support

# AI Provider Configuration
AI_PROVIDER=claude  # 'claude' or 'openai'

# Claude Configuration
ANTHROPIC_API_KEY=ваш_ключ_anthropic
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1000
CLAUDE_TEMPERATURE=0.7

# OpenAI Configuration
OPENAI_API_KEY=ваш_ключ_openai
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Embedding Provider (всегда OpenAI)
EMBEDDING_MODEL=text-embedding-ada-002

# Qdrant Vector Database Configuration
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=shrooms_knowledge

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=ваш_telegram_bot_token

# Security Configuration
JWT_SECRET=ваш_jwt_secret_key
BCRYPT_SALT_ROUNDS=10

# Admin Configuration
ADMIN_EMAIL=admin@shrooms.io
ADMIN_PASSWORD=ваш_пароль_админа

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Development Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
