{
  "name": "shrooms-support-bot",
  "version": "1.0.0",
  "description": "AI Support Bot for Shrooms project with Claude integration",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "telegram": "node telegram/bot.js",
    "load-kb": "node scripts/loadKnowledge.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.7",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "telegraf": "^4.12.2",
    "langchain": "^0.0.205",
    "@langchain/openai": "^0.0.28",
    "@langchain/community": "^0.0.43",
    "qdrant-js": "^1.6.0",
    "openai": "^4.24.1",
    "uuid": "^9.0.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.47.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "jest": "^29.6.2",
    "@types/node": "^20.5.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.js"],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/index.js",
      "!**/*.test.js",
      "!**/node_modules/**"
    ]
  }
}